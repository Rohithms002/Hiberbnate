<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.tyss.hibernateapp.bean.TrainingInfoBean" table = "training_info">
      
      <id name = "courseId" type = "int" column = "course_id">
      </id>
      
      <property name = "courseName" column = "course_name" type = "string"/>
      <property name = "duration" column = "duration" type = "string"/>
      <property name = "type" column = "type" type = "string"/>
      
   </class>
</hibernate-mapping>